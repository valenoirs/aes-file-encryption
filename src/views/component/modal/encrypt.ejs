<div
  class="modal fade"
  id="encrypt"
  tabindex="-1"
  aria-labelledby="encryptLabel"
  aria-hidden="true"
  data-bs-theme="dark"
>
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-info" id="encryptLabel"><i class="bi bi-chevron-right"></i> File Encryption</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body p-5" style="height: 350px">
        <h1 id="encrypt-icon" class="mb-5 text-center text-info"><i class="bi bi-shield-lock-fill"></i></h1>

        <div id="encrypted-gif" class="text-center" style="margin-top: 50px; z-index: 5000; display: none">
          <img src="./assets/loading.gif" alt="gif" width="110" style="filter: saturate(2);"/>
          <h4 class="text-light mt-3">Encrypting...</h4>
        </div>
        
        <div id="encrypted-text" class="text-center" style="margin-top: 110px; z-index: 5000; display: none">
          <h4 class="text-light mt-3">Encrypted</h4>
        </div>

        <form id="encrypt-form" onsubmit="encrypt()" method="post" action="/file/encrypt" enctype="multipart/form-data">
            <div class="mb-3">
                <input type="file" class="form-control" id="file" name="file" data-bs-theme="dark" required>
            </div>
            <div class="form mb-3">
              <label for="keyword" class="form-label text-info">Secret</label>
              <input type="text" class="form-control" id="keyword" name="keyword" placeholder=" " data-bs-theme="dark" required>
              <!-- <div id="fileHelp" class="form-text">
                *Insert anything
              </div> -->
            </div>
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-info"><i class="bi bi-chevron-right"></i> Encrypt</button>
            </div>
        </form>
    </div>
    </div>
  </div>
</div>
